<section class="cart py-8">
    <% if(session.cart) { %>
    <div class="order container-cart mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-600 pb-4">
            <img src="/img/cart-black.png" alt="cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="food-list">
            <% for(let food of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-6">
                <img class="w-36" src="/img/menu/<%= food.item.image%>" alt="food">
                <div class="flex-1 ml-4">
                    <h1><%= food.item.name%></h1>
                </div>
                <span class="flex-1"><%= food.qty%> Item</span>
                <span class="font-bold text-lg">‚Çπ<%= food.item.price * food.qty%></span>
            </div>
            <%  } %>
        </div>
        <hr class="border-gray-600">
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2">‚Çπ<%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Mobile">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary-2 px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Place Your Order</button>
                    </div>
                </form>
            </div>
            <!-- <a href="" class="inline-block cursor-pointer btn-primary-2 px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a> -->
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-2">
        <div class="container-cart mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 pt-2">Cart Empty üôÅ </h1>
            <p class="text-gray-500 text-lg mb-6">You probably haven't ordered food yet. <br>
               To order food, got to the main page</p>
               <img class="w-1/3 mx-auto" src="/img/empty-cart.png" alt="empty cart">
               <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary-2 text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>

</section>